Source: "C:\libsmu\libsmu.dll"; DestDir: "{app}";
Source: "C:\libsmu\libsmu.lib"; DestDir: "{pf32}\Microsoft Visual Studio 14.0\VC\lib"; Check: not Is64BitInstallMode
